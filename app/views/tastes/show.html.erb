
<p id="notice"><%= notice %></p>

<h3 class="jumbotron">
  <%= @personality.name %>: <%= @personality.tags %>
</h3>

<div class="weather">
  <% @parsed_weather["forecast"].each do |first| %>
    <% first["simpleforecast"].each do |second| %>
    <% second["forecastday"].each do |third| %>
    <ul>
    <%= third["conditions"] %>
    </ul>
  <% end %>
  <% end %>
  <% end %>

  <% @parsed_weather["current_observation"].each do |one| %>
    <ul>
    <%= one["feelslike_string"] %>
    </ul>
  <% end %>

  <% @parsed_weather["current_observation"].each do |wind| %>
    <ul>
    <%= wind["wind_string"] %>
    </ul>
  <% end %>
</div>


<p>
  <% @tastes.each do |taste| %>
    <% if taste.personality_id == @personality.id %>
      <%= taste.category %>
        <% case taste.category %>
        <% when "Eat" %>
          <img src="<%= @instagram_parsed_response_eat["data"][3]["images"]["standard_resolution"]["url"] %>" height="250" />
        <% when "Go" %>
          <img src="<%= @instagram_parsed_response_go["data"][3]["images"]["standard_resolution"]["url"] %>" height="250" />
        <% when "Shop" %>
          <img src="<%= @instagram_parsed_response_shop["data"][3]["images"]["standard_resolution"]["url"] %>" height="250" />
        <% when "Read" %>
          <% @nyt_parsed_response["results"].each do |book| %>
              <% book["book_details"].each do |info| %>
              <ul>
              <%= info["title"] %>
              <br></br>
              <%= info["author"] %>
              <br></br>
              <%= info["description"] %>
              <br></br>
              <%= info["publisher"] %>
              </ul>
              <% end %>
            <% end %>
        <% when "Listen" %>
        <p> Spotify </p>
        <% when "Do" %>
          <% if @personality.id != 5 %>
            <ul><%= @feed.channel.title %></ul>
            <% @feed.items.each do |item| %>
              <ul><%= item.title %></ul>
            <% end %>'
          <% else %>
             <% @meetup_parsed_response["results"].each do |meetup| %>
             <ul>
             <%= meetup["name"] %>
             <%= meetup["link"] %>
             <%= meetup["description"] %>
             <%= meetup["rating"] %>
             <% end %>"
          <% end %>
        <% end %>
      <% end %>
    <% end %>
</p>
<%= render 'layouts/footer' %>




